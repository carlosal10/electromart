{
    "name": "electromart-backend",
    "version": "1.0.0",
    "description": "ElectroMart online backend server",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "npm --prefix client run build",
        "test": "npm run test:backend && npm run test:frontend",
        "test:backend": "cross-env NODE_ENV=test vitest run",
        "test:frontend": "npm --prefix client run test:ci",
        "lint": "eslint . --ext .js,.jsx --max-warnings=0",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --check **/*.{js,jsx,json,css,md}",
        "format:write": "prettier --write **/*.{js,jsx,json,css,md}"
    },
    "type": "module",
    "keywords": [],
    "author": "Timon Owuor",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.10.0",
        "bcrypt": "^6.0.0",
        "cloudinary": "^2.7.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "envalid": "^8.0.0",
        "express": "^4.18.2",
        "express-rate-limit": "^7.4.0",
        "express-validator": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.1",
        "multer": "^2.0.0",
        "pino": "^9.3.1",
        "streamifier": "^0.1.1"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-react": "^7.35.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "nodemon": "^3.0.2",
        "pino-pretty": "^10.3.1",
        "prettier": "^3.3.3",
        "supertest": "^7.1.0",
        "vitest": "^1.6.0"
    }
}
