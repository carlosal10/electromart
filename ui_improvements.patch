+// Component to display and add reviews for a given product.
+const ReviewSection = ({ productId }) => {
+  const [reviews, setReviews] = useState([]);
+  const [newReview, setNewReview] = useState({ rating: 5, comment: '' });
+
+  useEffect(() => {
+    // Load existing reviews on mount
+    api.get(`/api/reviews/${productId}`)
+      .then(({ data }) => setReviews(Array.isArray(data) ? data : []))
+      .catch(err => console.error('Failed to load reviews', err));
+  }, [productId]);
+
+  const refreshReviews = async () => {
+    const { data } = await api.get(`/api/reviews/${productId}`);
+    setReviews(Array.isArray(data) ? data : []);
+  };
+
+  const submitReview = async (e) => {
+    e.preventDefault();
+    try {
+      await api.post(`/api/reviews/${productId}`, newReview);
+      setNewReview({ rating: 5, comment: '' });
+      await refreshReviews();
+    } catch (err) {
+      console.error('Failed to submit review', err);
+      alert(err.message || 'Failed to submit review');
+    }
+  };
+
+  return (
+    <div className="review-section" style={{ marginTop: '2rem' }}>
